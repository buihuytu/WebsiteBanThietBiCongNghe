    <title> S Shop</title>
</head>

<body>
    <!-- this is header -->
    <div class="container-fluid header">
        <div class="images">
            <a href=@Url.Action("Home", "Site")>
                <img class="img1" src="/Pictures/UI/logo.png" alt="logo1">
                <img class="img2" src="/Pictures/UI/image.png" alt="logo2">
            </a>
        </div>
        <div class="product-list">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="60" fill="currentColor" class="bi bi-list"
                 viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
            </svg>
            <span class="my-auto">Danh mục</span>
        </div>
    
        <!-- hidden list product -->
        @(await Component.InvokeAsync("CateHome"))

        <div class="input-group" style="max-width: 210px;">
            <div class="input-group-prepend" style="display: flex;">
                <i class="fas fa-search"
                   style="width:30px;height: 35px;background-color: #FFFFFF;opacity: 0.8;margin:auto;line-height: 35px;text-align: center;border-radius: 10px 0 0 10px;"></i>
                <input class="input1" placeholder="Bạn muốn tìm gì?" type="text">
            </div>
        </div>
        <div class="hotline">
            <a href="tel:123456789" class="telephone">
