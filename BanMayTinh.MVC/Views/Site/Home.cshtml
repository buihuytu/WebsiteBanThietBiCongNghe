<!-- Flash sale -->
<div class="mt-5 list-product">
    <div class="d-flex justify-content-between title-product">
        <h3>Flash Sale Chính hãng</h3>
        <a href="./component/listtivi.html" style="margin-top: -3px;">xem tất cả</a>
    </div>
</div>
<div class="mx-auto mt-2 text-center list-products slick">
    @foreach (var f in ViewBag.FlashSale)
    {
        <div class="list-product-items" style="height:390px;">
            <div class="product-image">
                <img src="/Pictures/Products/@f.Image" alt="ip" width="150" height="150" style="margin: auto;">
            </div>
            <div class="product-detail">
                <h5 class="mt-2 title-product-item" style="width:200px">
                    <a href=@Url.Action("ProductDetail", "Site", new { slug = @f.Slug}) class="list-product-items-link product-name">
                        @f.Name
                    </a>
                </h5>
                <del class="old-price">@String.Format("{0:0,0₫}", f.Price)</del>
                <p class="price-discount">
                    @String.Format("{0:0,0₫}", f.ProPrice)
                    <span class="discount"> (-@String.Format("{0:0}", (Convert.ToDecimal((f.Price - f.ProPrice)) / f.Price * 100))%)</span>
                </p>
            </div>
        </div>
    }
</div>

