@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Thêm mới Tài khoản";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Thêm mới Tài khoản</h4>
        <span style="display:none" id="session">@Accessor.HttpContext.Session.GetString("Admin_ID")</span>
        <div class="button">
            <a href="/Admin/Account/Index" class="btn btn-danger btn-sm">
                <i class="flaticon-381-exit-1"></i>
                Thoát
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="form-validation">
            <form class="form-valide">
                <div class="row">
                    <div class="col-xl-6">
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-fullname">
                                Tên người dùng
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-fullname" name="val-fullname" placeholder="Enter full name..">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-username">
                                Tên tài khoản
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-username" name="val-username" placeholder="Enter a username..">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-email">
                                Email <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-email" name="val-email" placeholder="Your valid email..">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-password">
                                Mật khẩu
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" id="val-password" name="val-password" placeholder="Mật khẩu">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-confirm-password">
                                Nhập lại mật khẩu <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" id="val-confirm-password" name="val-confirm-password" placeholder="Nhập lại mật khẩu!">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-role">
                                Vai trò
                                <span class="text-danger">*</span>
                            </label>
                            <div id="role" class="col-lg-6">
                                <select class="form-control default-select" id="val-role" name="val-role">
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-address">
                                Địa chỉ
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-address" name="val-address" placeholder="Địa chỉ">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="avatar">
                                Ảnh đại diện
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input class="control-label" id="avatar" name="" type="file" value="" accept="image/*">
                                <span class="field-validation-valid text-danger" data-valmsg-for="Image" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-phone">
                                Số điện thoại
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-phone" name="val-phone" placeholder="Số điện thoại">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-active">
                                Trạng thái hoạt động
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <select class="form-control default-select" id="val-active" name="val-active">
                                    <option value="">Please select</option>
                                    <option value="1">Hoạt động</option>
                                    <option value="0">Không hoạt động</option>
                                </select>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">
                                <button type="submit" class="btn btn-primary btn-sm">Lưu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function (){
            LoadAllRoles();
            $(".form-valide").validate({
                rules: {
                    "val-fullname": {
                        required: !0,
                        minlength: 3
                    },
                    "val-username": {
                        required: !0,
                        minlength: 3
                    },
                    "val-email": {
                        required: !0,
                        email: !0
                    },
                    "val-password": {
                        required: !0,
                        minlength: 5
                    },
                    "val-confirm-password": {
                        required: !0,
                        equalTo: "#val-password"
                    },
                    "val-address": {
                        required: !0,
                        minlength: 3
                    },
                    "val-phone": {
                        required: !0,
                    },
                    "val-role": {
                        required: !0
                    },
                    "val-active": {
                        required: !0
                    }
                },
                messages: {
                    "val-fullname": {
                        required: "Vui lòng nhập tên người dùng!",
                    },
                    "val-username": {
                        required: "Vui lòng nhập tên tài khoản!",
                        minlength: "Tên tài khoản phải chứa ít nhất 3 kí tự!"
                    },
                    "val-email": "Vui lòng nhập đúng địa chỉ Email!",
                    "val-password": {
                        required: "Vui lòng nhập mật khẩu!",
                        minlength: "Mật khẩu phải chứa ít nhất 5 kí tự!"
                    },
                    "val-confirm-password": {
                        required: "Vui lòng nhập lại mật khẩu!",
                        equalTo: "Mật khẩu nhập lại không đúng!"
                    },
                    "val-role": "Vui lòng chọn vai trò!",
                    "val-address": "Vui lòng nhập địa chỉ!",
                    "val-phone": "Vui lòng nhập số điện thoại!",
                    "val-active": "Vui lòng chọn trạng thái hoạt động!"
                },

                ignore: [],
                errorClass: "invalid-feedback animated fadeInUp",
                errorElement: "div",
                errorPlacement: function (e, a) {
                    jQuery(a).parents(".form-group > div").append(e)
                },
                highlight: function (e) {
                    jQuery(e).closest(".form-group").removeClass("is-invalid").addClass("is-invalid")
                },
                success: function (e) {
                    jQuery(e).closest(".form-group").removeClass("is-invalid"), jQuery(e).remove()
                },
                submitHandler: function (form) {
                    var fd = new FormData();
                    var file = $('#avatar').prop('files')[0];
                    fd.append("Name", $('#val-fullname').val());
                    fd.append("Username", $('#val-username').val());
                    fd.append("Password", $('#val-password').val());
                    fd.append("IdRole", $('#val-role').val());
                    fd.append("Address", $('#val-address').val());
                    fd.append("Email", $('#val-email').val());
                    fd.append("Phone", $('#val-phone').val());
                    fd.append("IsActive", $('#val-active').val());
                    //fd.append("CreatedBy", 4);
                    //fd.append("UpdatedBy", 4);
                    fd.append("CreatedBy", $("#session").text());
                    fd.append("UpdatedBy", $("#session").text());
                    fd.append("FileImage", file);
                    let Url = "https://localhost:7008/api/Accounts";
                    $.ajax({
                        url: Url,
                        method: 'POST',
                        data: fd,
                        processData: false,
                        contentType: false,
                        success: function (response) {
                            console.log(response);
                            showToastSuccessTopRight("Thêm thành công tài khoản " + $("#val-username").val() + " !", "/Admin/Account/Index");
                        },
                        error: function (errorMessage) {
                            if (errorMessage.responseText == "e002") {
                                showToastErrorTopRight("Tài khoản: " + $("#val-username").val() + " đã tồn tại!");
                            }
                            else if (errorMessage.responseText == "e001") {
                                showToastErrorTopRight("Có lỗi khi thêm mới! Vui lòng liên hệ DEV để được hỗ trợ!");
                            }
                        }
                    });
                    return false;
                }
            });
        });

        function LoadAllRoles() {
            let Url = "https://localhost:7008/api/Roles";
            $.ajax({
                url: Url,
                method: "GET",
                contentType: 'application/json;charset=utf-8',
                success: function (response) {
                    console.log(response);
                    $("#role .show li").each(function () {
                        $(this).remove();
                    });
                    $("#val-role").append(`<option disabled selected hidden>Vui lòng chọn vai trò</option>`);
                    for (let role of response) {
                        $("#val-role").append(`<option value="${role.id}">${role.name}</option>`);
                    }
                },
                error: function (errorMessage) {
                    console.log(errorMessage);
                }
            });
        }

    </script>
}